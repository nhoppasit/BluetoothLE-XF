<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.AdapterListPage"
             xmlns:acr="clr-namespace:Acr.XamForms;assembly=Acr.XamForms"
             Title="BLE Plugin (Adapter List)">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Scan" Command="{Binding Scan}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <ActivityIndicator IsRunning="{Binding IsBusy}" VerticalOptions="Center" />
            <ListView ItemsSource="{Binding Adapters}">
                <ListView.Behaviors>
                    <acr:ItemTappedCommandBehavior Command="{Binding Select}" />
                </ListView.Behaviors>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding DeviceName}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>